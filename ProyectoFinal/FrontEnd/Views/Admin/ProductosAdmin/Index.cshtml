@model IEnumerable<FrontEnd.Models.IndexProductoViewModels>

@{

    ViewBag.Title = "Index";
}
@Html.Raw(Session["mensaje"])
<div class="btn-group">
    @Html.ActionLink("Agregar nuevo producto", "Create", null, new { @class = "btn btn-block btn-success" })
    <br><br><br>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="box">

            <div class="box-header">
                <h2 class="box-title">Productos</h2>
            </div>

            <div class="box-body table-responsive">
                <table id="productosTabla" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id_Producto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Precio)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Modelo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.cantidad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.marca)
                            </th>
                            <th>
                                Acciones
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            foreach (var producto in Model)
                            {
                                <tr>
                                    <td>@producto.Id_Producto</td>
                                    <td>@producto.Nombre</td>
                                    <td>@producto.Precio</td>
                                    <td>@producto.Descripcion</td>
                                    <td>@producto.Modelo</td>
                                    <td>@producto.cantidad</td>
                                    <td>@producto.marca</td>
                                    <td>
                                        @Html.ActionLink("Detalles", "Detalles", "ProductosAdmin", new { id = producto.Id_Producto }, null) |
                                        @Html.ActionLink("Editar", "Editar", "ProductosAdmin", new { id = producto.Id_Producto }, null) |
                                        @Html.ActionLink("Eliminar", "Eliminar", "ProductosAdmin", new { id = producto.Id_Producto }, null)
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#productosTabla").DataTable({    
                responsive: true,
                "destroy": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                }
            });
        });

    </script>
}

