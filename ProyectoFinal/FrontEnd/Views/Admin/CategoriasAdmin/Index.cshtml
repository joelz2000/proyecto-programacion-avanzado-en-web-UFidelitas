@model IEnumerable<FrontEnd.Models.CategoriasViewModel>

@{
    ViewBag.Title = "Index";

}

@Html.Raw(Session["mensaje"])
<div class="btn-group">
    @Html.ActionLink("Agregar Nueva Categoria", "Create", null, new { @class = "btn btn-block btn-success" })
    <br><br><br>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="box">

            <div class="box-header">
                <h2 class="box-title">Categorias</h2>
            </div>

            <div class="box-body table-responsive">
                <table id="tablaCategorias" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.descripcion)
                            </th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.descripcion)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.id_categoria }, new { @class = "btn btn-default btn-warning" })
                                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal-eliminar-@item.id_categoria">
                                        Eliminar
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>

        /*Modal Eliminar*/
        @foreach (var item in Model)
        {
            <div class="modal fade" id="modal-eliminar-@item.id_categoria">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header fondoRojoModalEliminar">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                            <h4 class="modal-title">Eliminar Categoria</h4>
                        </div>
                        <div class="modal-body">
                            <p>¿Seguro quieres Eliminar <b>@item.nombre</b>?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Regresar</button>
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.id_categoria }, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
        }

    </div>
</div>