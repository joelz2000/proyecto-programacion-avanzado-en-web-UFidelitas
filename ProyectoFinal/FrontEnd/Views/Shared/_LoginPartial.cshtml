                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
        */


    }
}
else
{
    <div class="navbar-nav">
        @{
            @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-item nav-link active" })
            @Html.ActionLink("Nosotros", "About", "Home", new { area = "" }, new { @class = "nav-item nav-link" })
            @Html.ActionLink("Contactenos", "Contact", "Home", new { area = "" }, new { @class = "nav-item nav-link" })
        }
    </div>
    <div class="navbar nav ml-auto">
        @Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-item nav-link" })
        @Html.ActionLink("Iniciar sesion", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-item nav-link" })
    </div>

