@model FrontEnd.Models.NavbarUsuarioViewModel

@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <div class="navbar-nav">
        @{
            @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-item nav-link active" })
            @Html.ActionLink("Nosotros", "About", "Home", new { area = "" }, new { @class = "nav-item nav-link" })
            @Html.ActionLink("Contactenos", "Contact", "Home", new { area = "" }, new { @class = "nav-item nav-link" })
            @Html.ActionLink("Carrito", "Index", "Carrito", new { area = "" }, new { @class = "nav-item nav-link" })
        }
    </div>

    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "ml-auto" }))
    {
        @Html.AntiForgeryToken()
        <div class="navbar nav ml-auto">
            @Html.ActionLink("Hola, " + Model.nombre + "!", "Edit", "PerfilUsuario", routeValues: new { id = Model.id_usuario }, htmlAttributes: new { title = "Manage", @class = "nav-item nav-link" })
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesion</a></li>
        </div>

        /*
        <ul class="nav navbar-nav ml-auto">
